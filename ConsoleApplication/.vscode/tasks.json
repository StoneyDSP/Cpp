{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++17",
                "/W4",
                "/fp:precise",
                "/Fd${fileWorkspaceFolder}\\Builds\\VSCode\\${workspaceFolderBasename}.pdb",
                "/Fe${fileWorkspaceFolder}\\Builds\\VSCode\\${workspaceFolderBasename}.exe",
                "/Fo${fileWorkspaceFolder}\\Builds\\VSCode\\${workspaceFolderBasename}.obj",
                "${file}"

                // defaults...
                // "/Zi",
                // "/EHsc",
                // "/nologo",
                // "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                // "${file}"
            ],
            "options": {
                "cwd": "${fileWorkspaceFolder}" //"${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type":"cmake",
            "label": "CMake: cmake.exe build active config",
            "command": "build",
            "options": {
                "cwd": "${fileWorkspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "CMake Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
