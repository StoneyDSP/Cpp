{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${workspaceRoot}",
            "installDir": "${workspaceRoot}",
            "errors":
            {
                "deprecated": true,
                "dev": true
            },
            "warnings":
            {
                "deprecated": true,
                "dev": true,
                "systemVars": true,
                "unusedCli": true,
                "uninitialized": false
            },
            "cacheVariables":
            {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_EXPORT_COMPILE_COMMANDS":true,
                "CMAKE_INSTALL_PREFIX":null
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },

        {
            "name": "x64",
            "displayName": "x64",
            "inherits": "windows-base",
            "architecture":
            {
                "value": "x64",
                "strategy": "external"
            }
        },

        {
            "name": "x86",
            "displayName": "x86",
            "inherits": "windows-base",
            "architecture":
            {
                "value": "x86",
                "strategy": "external"
            }
        }

    ],
    "buildPresets": [

        {
            "description": "x64 Debug",
            "name": "Debug",
            "displayName": "Debug",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },

        {
            "description": "x64 Release",
            "name": "Release",
            "displayName": "Release",
            "configurePreset": "x64",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },

        {
            "description": "x86 Debug",
            "name": "Debug",
            "displayName": "Debug",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },

        {
            "description": "x86 Release",
            "name": "Release",
            "displayName": "Release",
            "configurePreset": "x86",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        }

    ],
    "testPresets": [
        {
            "description": "x64 Test",
            "name": "Test",
            "displayName": "Test",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true
        },
        {
            "description": "x86 Test",
            "name": "Test",
            "displayName": "Test",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true
        }
    ]
}
